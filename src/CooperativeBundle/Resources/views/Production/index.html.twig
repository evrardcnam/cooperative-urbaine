{% extends 'CooperativeBundle::baseproduction.html.twig' %}

{% block body -%}
    <h1>Production list</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idproduction</th>
                <th>Produits</th>
                <th>Productionmax</th>
                <th>Coutproduit</th>
                <th>Ccommandemin</th>
                <th>Commandemax</th>
                <th>Ddatedebut</th>
                <th>Ddatefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('production_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idProduction }}</td>
                <td>{{ entity.produits }}</td>
                <td>{{ entity.productionMax }}</td>
                <td>{{ entity.coutProduit }}</td>
                <td>{{ entity.ccommandeMin }}</td>
                <td>{{ entity.commandeMax }}</td>
                <td>{{ entity.ddateDebut }}</td>
                <td>{{ entity.ddateFin }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-primary" href="{{ path('production_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-primary" href="{{ path('production_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('production_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

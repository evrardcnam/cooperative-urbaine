{% extends 'CooperativeBundle::basemembre.html.twig' %}

{% block body -%}
    <h1>Membre list</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idmembre</th>
                <th>Nommembre</th>
                <th>Mdpmembre</th>
                <th>Age_membre</th>
                <th>Commentaire_personnel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('membre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idMembre }}</td>
                <td>{{ entity.nomMembre }}</td>
                <td>{{ entity.mdpMembre }}</td>
                <td>{{ entity.agemembre }}</td>
                <td>{{ entity.commentairepersonnel }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-primary" href="{{ path('membre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-primary" href="{{ path('membre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('membre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
